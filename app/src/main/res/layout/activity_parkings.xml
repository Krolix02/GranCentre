<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/fondo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewRestaurant"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Parkings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/fletxaenrere"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@drawable/back"
            android:maxWidth="70dp"
            android:maxHeight="70dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:scaleType="fitCenter"

            android:onClick="onClick"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/parkinguno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:maxWidth="250dp"
            android:maxHeight="120dp"
            android:paddingLeft="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/parkingelsot"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/titol1"
                android:text="--- Parking el Sot ---"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/titol1"
                android:textSize="20sp"
                android:id="@+id/espaistotals1"
                android:text="--- Plaçes totals: 120 ---"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/espaistotals1"
                android:textSize="20sp"
                android:id="@+id/espaisdisponibles1"
                android:text="--- Plaçes totals: 38 ---"/>


            <ImageView
                android:id="@+id/parkingdos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/espaisdisponibles1"
                android:adjustViewBounds="true"

                android:maxWidth="200dp"
                android:maxHeight="100dp"
                android:paddingLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/parkingescalopi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/titol2"
                android:layout_below="@+id/parkingdos"
                android:text="--- Parking Escalopi Blau ---"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/titol2"
                android:textSize="20sp"
                android:id="@+id/espaistotals2"
                android:text="--- Plaçes totals: 150 ---"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/espaistotals2"
                android:textSize="20sp"
                android:id="@+id/espaisdisponibles2"
                android:text="--- Plaçes totals: 55 ---"/>

            <ImageView
                android:id="@+id/parkingtres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/espaisdisponibles2"
                android:adjustViewBounds="true"

                android:maxWidth="200dp"
                android:maxHeight="100dp"
                android:paddingLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/parkingmunicipal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/titol3"
                android:layout_below="@+id/parkingtres"
                android:text="--- Parking Municipal Granollers ---"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/titol3"
                android:textSize="20sp"
                android:id="@+id/espaistotals3"
                android:text="--- Plaçes totals: 200 ---"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/espaistotals3"
                android:textSize="20sp"
                android:id="@+id/espaisdisponibles3"
                android:text="--- Plaçes totals: 78 ---"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>